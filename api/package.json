{
    "name": "transcription-api",
    "version": "1.0.0",
    "description": "API for the Transcription Service",
    "engines": {
        "node": ">=20.0.0"
    },
    "scripts": {
        "build": "tsc",
        "test": "npm run build && AWS_XRAY_CONTEXT_MISSING=LOG_ERROR AWS_XRAY_LOG_LEVEL=silent jest ./test",
        "fmt": "prettier --write .",
        "lint": "eslint --fix ."
    },
    "dependencies": {
        "@aws-sdk/client-dynamodb": "^3.667.0",
        "@aws-sdk/client-s3": "^3.667.0",
        "@aws-sdk/client-transcribe": "^3.667.0",
        "@aws-sdk/util-dynamodb": "^3.667.0",
        "@vendia/serverless-express": "^4.10.4",
        "aws-xray-sdk": "^3.5.1",
        "body-parser": "^1.20.3",
        "cors": "^2.8.5",
        "express": "^4.21.1",
        "express-validator": "^7.2.0",
        "uuid": "^9.0.0"
    },
    "devDependencies": {
        "@trivago/prettier-plugin-sort-imports": "^4.3.0",
        "@types/aws-lambda": "^8.10.119",
        "@types/cors": "^2.8.13",
        "@types/jest": "^29.5.13",
        "aws-sdk-client-mock": "^3.1.0",
        "eslint": "^8.48.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-prettier": "^5.2.1",
        "jest": "^29.7.0",
        "jest-dynalite": "^3.6.1",
        "prettier": "^3.0.3",
        "ts-jest": "^29.1.1",
        "typescript": "^5.2.2",
        "@typescript-eslint/parser": "7.2.0"
    },
    "prettier": {
        "importOrder": ["^react", "^[\\w\\d]+", "^[./]"],
        "importOrderSeparation": true,
        "plugins": ["@trivago/prettier-plugin-sort-imports"]
    },
    "eslintConfig": {
        "extends": [
            "plugin:prettier/recommended"
        ],
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
            "ecmaVersion": 2020
        },
        "env": {
            "es6": true
        }
    }
}
